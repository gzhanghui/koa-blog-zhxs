
@font-face
  font-family '站酷文艺体'
  src url('./fonts/站酷文艺体.ttf')

html, body
  background-color var(--color-white)
  color var(--text-color-regular)
  font-size var(--font-size)

body
  padding var(--padding)

.fixed-page
  position fixed
  top 0
  right 0
  bottom 0
  left 0
  z-index 0
  border 15px solid var(--text-color-primary)
  background-color var(--color-white)

.fixed-border
  height var(--padding)
  background-color var(--text-color-primary)

.app
  position relative
  z-index 1

.header
  position relative
  left 0
  z-index 10
  display flex
  justify-content space-between
  align-items center
  margin-top 60px
  width 100%

  @media (min-width 576px)
    .logo-wrap
      position relative
      vertical-align top
      font-size 0

      .icon-extend
        position relative
        display inline-block
        width 16px
        height 2px
        border-radius 1px
        background-color var(--text-color-primary)

      .logo-icon
        @extend .icon-extend

        &::after
          @extend .icon-extend
          position absolute
          top 8px
          content ''

    .menu-wrap, .menu
      margin 0
      padding 0 20px
      background-color var(--text-color-primary)
      box-shadow 0 6px 24px 0 rgba(0, 0, 0, 0.05), 0 0 0 1px rgba(0, 0, 0, 0.08)
      list-style none
      font-size 0

    .menu-item
      position relative
      float left
      color var(--text-color-secondary)
      text-align center
      transition all 0.3s

      &.active
        color var(--bs-gray-300)

        .menu-icon
          opacity 1

      a
        display flex
        align-items center
        box-sizing content-box
        padding 0 13px
        width 15px
        height 64px
        color inherit
        text-align center
        text-decoration none
        font-size 14px
        line-height 1.4

    .menu-icon
      position absolute
      top 10px
      right 8px
      z-index 9
      display inline-block
      width 12px
      height 12px
      border 2px solid var(--color-primary)
      border-radius 50%
      opacity 0
      transition all 0.3s

.content
  position relative
  z-index 9

.logo
  position relative
  display inline-block
  margin-top 112px
  color var(--text-color-primary)
  font-family '站酷文艺体'

  .logo-name
    display inline-block
    width 96px
    font-size 36px
    line-height 48px

  .logo-dot-icon
    position absolute
    top -2px
    left 61px
    z-index 9
    width 18px
    height 18px
    border 4px solid var(--color-primary)
    border-radius 50%

.sentence-wrap
  margin-top 78px
  min-height 138px
  color var(--text-color-regular)

  .meta-from
    text-align right

.image-wrap
  position relative
  margin-top -32px
  height calc(100vh - 140px)

  .bg-image
    position absolute
    top 0
    left 0
    z-index 0
    height 100%
    background url('https://images.unsplash.com/photo-1506543730435-e2c1d4553a84?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHx2aXN1YWwtc2VhcmNofDF8fHxlbnwwfHx8fHw%3D&auto=format&fit=crop&w=900&q=60') center no-repeat // images.unsplash.com/photo-1506543730435-e2c1d4553a84?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHx2aXN1YWwtc2VhcmNofDF8fHxlbnwwfHx8fHw%3D&auto=format&fit=crop&w=900&q=60') center no-repeat
    background-size cover

.footer-wrap
  min-height 72px
  // width: 100%
  // border-top: 1px solid var(--bs-gray-200)
  color var(--text-color-secondary)
  font-size 13px

.footer-social
  a
    margin-left 8px
    color var(--text-color-regular) !important
    text-decoration none !important
    font-size 16px

// 文章列表
.post-list
  margin 0
  padding 0
  padding-bottom 54px
  list-style none

  .post-item
    margin-top 54px

    .split-line
      font-size var(--font-size-base)

      &::after
        display inline-block
        width 25px
        height 1.5px
        background var(--text-color-primary)
        content ''

  .post-title
    margin-top 18px
    margin-bottom 16px

    a
      color var(--text-color-regular)
      text-decoration none
      letter-spacing 1px
      font-weight 400
      transition color 0.15s ease-in-out

      &:hover
        color var(--text-color-primary)

  .post-content
    font-size var(--font-size-small)

  .post-more-btn
    padding var(--bs-btn-padding-y) 0
    color var(--color-primary)

    &:active
      border-color transparent
      box-shadow var(--bs-btn-active-shadow)
      color var(--bs-red)

// 文章
.article
  .article-title
    color var(--text-color-primary)
    text-decoration none
    letter-spacing 1px
    font-weight 400
    font-size var(--font-size-large)

  .article-btn
    margin-left -1em

  .article-content
    color var(--text-color-regular)
    color var(--bs-gray-700)
    letter-spacing 0
    font-size var(--font-size-base)
    line-height 1.715

// swiper
.swiper
  .swiper-wrapper
    height 246px

    .swiper-slide
      overflow hidden
      width auto
      height 100%

      img
        width 100%
        height 100%
        object-fit cover

  .swiper-next-button, .swiper-prev-button
    position absolute
    top 50%
    left 0
    z-index 3
    display inline-block
    width 18px
    height 18px
    border-radius 50%
    background rgba(0, 0, 0, 0.25)
    color var(--color-white)
    text-align center
    line-height 18px

  .swiper-prev-button
    right 0
    left auto

.btn-copy
  position absolute
  top 12px
  right 12px

.header-transition
  transition width 0.45s cubic-bezier(0.215, 0.61, 0.355, 1)

.page-item
  padding 4px 8px
  position relative
  font-size 13px
  color var(--text-color-secondary)

  &:first-child
    padding-left 0

  &.active
    color var(--text-color-primary)
    font-weight 600

    &::after
      content ''
      position absolute
      display inline-block
      width 6px
      height 6px
      background var(--color-primary)
      border-radius 50%
      top 8px
      right 5px
      z-index 1

  a
    position relative
    z-index 2

.hljs
  background #f6f8fa !important
  padding 16px

h1, .h1
  font-size var(--font-size-extra-large)

h2, .h2
  font-size var(--font-size-large)

h3, .h3
  font-size var(--font-size-medium)

h4, .h4
  font-size var(--font-size-base)

h5, .h5, h6, .h6
  font-size var(--font-size-small)

.content
  font-size var(--font-size-small)

  img
    max-width 100%

@media (min-width 576px)
  .about-offset
    left -100px
    top 80px
    min-height 80vh
