.mobile
  .menu-wrap
    font-size: 0

    .btn-trigger
      position: relative
      display: inline-block
      overflow: hidden
      margin: 0
      padding: 0
      width: 30px
      height: 30px
      outline: none
      border: none
      background: var(--color-white)
      color: transparent
      font-size: 0
      cursor: pointer
      transition: all .3s

      .line
        position: absolute
        top: 10px
        left: 0
        width: 24px
        height: 2px
        border-radius: 4px
        background: var(--text-color-regular)
        font-size: 0
        transition: all .3s

      .line-2
        top: auto
        bottom: 10px

      &.close
        transform: rotate(180deg)

        .line-1
          transform: translateY(2px) rotate(45deg)

        .line-2
          transform: translateY(-6px) rotate(-45deg)

    .menu
      position: absolute
      top: 84px
      right: 0
      display: flex
      flex-wrap: wrap
      overflow: hidden
      margin: 0
      max-height: 0
      width: 100%
      background: var(--text-color-primary)
      list-style: none
      font-size: var(--font-size)
      transition: all .25s ease-in-out
      transition-delay: .1s

      &.collapse
        max-height: 200px

    .menu-item
      width: 50%

    a
      display: inline-block
      padding: 12px 0
      width: 100%
      color: var(--text-color-secondary)
      text-align: center
      text-decoration: none

    img
      width: 24px
      color: #fff

.mobile-swiper
  position: relative
  overflow: hidden
  height: 256px

  img
    width: 100%
    height: 100%
    object-fit: cover
